.masker {
  z-index: 3;
  & > div:first-child {
    background-color: rgba(0, 0, 0, .9);
  }
}
.img-list-box {
  width: 100%;
  height: 100%;
  overflow: hidden;
  & > .img-list-wraper {
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    transition: transform .4s ease;
    & > .img-item {
      width: 100%;
      flex: 1;
      text-align: center;
      & > img {
        max-width: 100%;
        max-height: 100%;
        transition: transform .4s ease;
      }
    }
  }
}
.view-index {
  color: #d4d4d4;
}
